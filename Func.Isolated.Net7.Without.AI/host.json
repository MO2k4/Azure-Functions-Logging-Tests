{
  "version": "2.0",
  "logging": {
    "fileLoggingMode": "always",
    "logLevel": { //https://learn.microsoft.com/en-us/azure/azure-functions/configure-monitoring?tabs=v2#configure-log-levels
      "default": "Warning", // Default is Information. See best practices for a lot of log: https://learn.microsoft.com/en-us/azure/azure-functions/configure-monitoring?tabs=v2#solutions-with-high-volume-of-telemetry
      "Function": "Information", //Show as default for function logging the information and higher https://learn.microsoft.com/en-us/azure/azure-functions/configure-monitoring?tabs=v2#solutions-with-high-volume-of-telemetry
      "Host.Aggregator": "Information", // Set this to information (default) otherwise you will lose metrics. //https://learn.microsoft.com/en-us/azure/azure-functions/configure-monitoring?tabs=v2#solutions-with-high-volume-of-telemetry
      "Host.Results": "Information", // Set this to information (default) otherwise you will lose Performance, Failures, and so on. //https://learn.microsoft.com/en-us/azure/azure-functions/configure-monitoring?tabs=v2#solutions-with-high-volume-of-telemetry
      "Function.Function1": "Information", // Info is the default.
      "Function.Function1.User": "Warning" // User logs only for wanrning and above. Lower than information still not working :-(
    },
    "applicationInsights": {
      "samplingSettings": {
        "isEnabled": true,
        "excludedTypes": "Request"
      }
    }
  }
}